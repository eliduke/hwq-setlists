<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_with(model: song, local: true) do |form| %>
      <% if song.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

          <ul>
          <% song.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control input-lg" %>
      </div>

      <div class="form-group">
        <%= form.label :audios %>

        <% if @song.audios.attached? %>
          <ul class="list-unstyled">
            <% @song.audios.each do |audio| %>
            <li class="song">
              <audio src="<%= url_for(audio) %>" controls></audio>
              <p class="audio-info">
                <%= url_for(audio).split("/").last %><br/>
                <%= audio.created_at.strftime("%B %d, %Y") %>
              </p>
            </li>
            <% end %>
          </ul>
        <% end %>

        <%= form.file_field :audios, multiple: true, id: :song_audios, class: "form-control input-lg" %>
      </div>


      <div class="actions">
        <%= form.submit "Save", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
