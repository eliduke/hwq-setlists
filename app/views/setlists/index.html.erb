<table class="table">
  <thead>
    <tr>
      <th>Setlists</th>
      <th class="text-center"><%= link_to "Songs", songs_path %></th>
      <th class="text-center">Date</th>
      <th class="text-right">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @setlists.each do |setlist| %>
      <tr>
        <td><small><%= setlist.type %></small><%= link_to setlist.name, setlist %></td>
        <td class="text-center">
          <ul class="list-unstyled">
            <% setlist.songs.order(:name).each do |song| %>
              <li><%= link_to song.name, song %></li>
            <% end %>
          </ul>
        </td>
        <td class="text-center"><%= setlist.created_at.strftime("%b %e") %></td>
        <td class="text-right">
          <ul id="actions" class="list-inline">
            <li><%= link_to '✏️', edit_setlist_path(setlist) %></li>
            <li><%= link_to '🗑', setlist, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
